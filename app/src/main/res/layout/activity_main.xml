<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section 1 -->
                <TextView
                    android:id="@+id/sectionOneTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Sectoin 1"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sectionOneRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"/>

                <!-- Section 2 -->
                <TextView
                    android:id="@+id/sectionTwoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    tools:text="Section 2"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sectionTwoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>

                <!-- Section 3 -->
                <TextView
                    android:id="@+id/sectionThreeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    tools:text="Section 3"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sectionThreeRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:overScrollMode="always"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical"/>



            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>